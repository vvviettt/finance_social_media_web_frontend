{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "baseUrl": "./",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules", "*.config.js"]
}
